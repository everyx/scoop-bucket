    "url": "https://github.com/microsoft/cascadia-code/releases/download/v2008.25/CascadiaCode-2008.25.zip#/CascadiaCode.zip",
    "hash": "4602a0b8b986b18a1c3f460fd959ec1ce522aedcf11ab4c0d41a5fc5ed839be0",
    "checkver": "github",
    "depends": "sudo",
    "autoupdate": {
        "url": "https://github.com/microsoft/cascadia-code/releases/download/v$version/CascadiaCode-$version.zip#/CascadiaCode.zip"
    },
    "extract_dir": "CascadiaCode/ttf",
    "installer": {
        "script": [
            "if(!(is_admin)) { error \"Admin rights are required, please run 'sudo scoop install $app'\"; exit 1 }",
            "$addFont = \"$bucketsdir\\everyx\\libexec\\add-font.ps1\"",
            "Get-ChildItem -Path $dir -Include 'CascadiaCode.ttf' -Recurse | ForEach {",
            "   Invoke-Expression -Command \"$addFont -path '$_'\"",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "if(!(is_admin)) { error \"Admin rights are required, please run 'sudo scoop install $app'\"; exit 1 }",
            "$removeFont = \"$bucketsdir\\everyx\\libexec\\remove-font.ps1\"",
            "Get-ChildItem -Path $dir -Include 'CascadiaCode.ttf' -Recurse | ForEach {",
            "   Invoke-Expression -Command \"$removeFont -file '$($_.Name)'\"",
            "}"
        ]
    }
}
