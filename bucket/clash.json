{
    "homepage": "https://github.com/Dreamacro/clash",
    "description": "A rule-based tunnel in Go",
    "version": "1.2.0",
    "persist": ["config.yaml", "Country.mmdb"],
    "pre_install": [
        "$config = \"$persist_dir\\config.yaml\"",
        "$value  = \"# Configuration reference:`\n# https://github.com/Dreamacro/clash/wiki/configuration`\n\"",
        "if (!(Test-Path $config)) {",
        "    Add-Content -Path $config -Value $value",
        "}",
        "$mmdb     = \"$persist_dir\\Country.mmdb\"",
        "$mmdb_url = \"https://github.com/Dreamacro/maxmind-geoip/releases/latest/download/Country.mmdb\"",
        "if (!(Test-Path $mmdb)) {",
        "   Invoke-WebRequest -uri $mmdb_url -OutFile $mmdb",
        "}"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Dreamacro/clash/releases/download/v1.2.0/clash-windows-amd64-v1.2.0.zip",
            "hash": "2d6fc90ca2a6cb73228d43a45ded25867a82ff7e6fe741f1433574718565d9f1",
            "bin": [
                [
                    "clash-windows-amd64.exe",
                    "clashd",
                    "-d $dir"
                ],
                [
                    "clash-windows-amd64.exe",
                    "clash"
                ]
            ]
        },
        "32bit": {
            "url": "https://github.com/Dreamacro/clash/releases/download/v1.2.0/clash-windows-386-v1.2.0.zip",
            "hash": "4f476f5bcf182feb4876f01d3bd06caa9ffde7ee12487dc4fef1eadf0c5ca284",
            "bin": [
                [
                    "clash-windows-386.exe",
                    "clashd",
                    "-d $dir"
                ],
                [
                    "clash-windows-386.exe",
                    "clash"
                ]
            ]
        }
    },
    "suggest": {
        "Dashboard": [
            "clash-dashboard",
            "yacd"
        ],
        "Daemon": "nssm"
    },
    "checkver": {
        "url": "https://github.com/Dreamacro/clash/releases",
        "regex": "title=\"v([\\d\\.]+)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Dreamacro/clash/releases/download/v$version/clash-windows-amd64-v$version.zip"
            },
            "32bit": {
                "url": "https://github.com/Dreamacro/clash/releases/download/v$version/clash-windows-386-v$version.zip"
            }
        }
    }
}
