{
    "homepage": "https://github.com/Dreamacro/clash/wiki/Premium-Core-Features",
    "description": "close-sourced pre-built Clash binary with TUN support and more (it's free)",
    "version": "2020.08.16",
    "persist": ["config.yaml", "Country.mmdb"],
    "pre_install": [
        "$config = \"$persist_dir\\config.yaml\"",
        "$value  = \"# Configuration reference:`\n# https://github.com/Dreamacro/clash/wiki/configuration`\n\"",
        "if (!(Test-Path $config)) {",
        "    Add-Content -Path $config -Value $value",
        "}",
        "$mmdb     = \"$persist_dir\\Country.mmdb\"",
        "$mmdb_url = \"https://github.com/Dreamacro/maxmind-geoip/releases/latest/download/Country.mmdb\"",
        "if (!(Test-Path $mmdb)) {",
        "   Invoke-WebRequest -uri $mmdb_url -OutFile $mmdb",
        "}"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-amd64-2020.08.16.zip",
            "hash": "ae494d381ed4a5370b51cb3c416966f101d90e7223bf5eab928ec44563e07746",
            "bin": [
                [
                    "clash-windows-amd64.exe",
                    "clashd",
                    "-d $dir"
                ],
                [
                    "clash-windows-amd64.exe",
                    "clash"
                ]
            ]
        },
        "32bit": {
            "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-386-2020.08.16.zip",
            "hash": "e0db25cc3956bda19d3469a3db1e01d3ff67d95775fdcebffc0d0ada968d460a",
            "bin": [
                [
                    "clash-windows-386.exe",
                    "clashd",
                    "-d $dir"
                ],
                [
                    "clash-windows-386.exe",
                    "clash"
                ]
            ]
        }
    },
    "suggest": {
        "Dashboard": [
            "clash-dashboard",
            "yacd"
        ],
        "Daemon": "nssm"
    },
    "checkver": {
        "url": "https://github.com/Dreamacro/clash/releases/tag/premium",
        "regex": "Premium\\s+([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-amd64-$version.zip"
            },
            "32bit": {
                "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-386-$version.zip"
            }
        }
    }
}
