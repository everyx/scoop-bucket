    "hash": "dbc63746cd8daa8b219a236fe0278e5eb7f910bec90c9897ada440e6d796f256",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/adobe-fonts/source-han-sans/raw/release/SubsetOTF/SourceHanSansCN.zip"
    },
    "installer": {
        "script": [
            "$addFont = '$bucketsdir/everyx/bin/Add-Font.ps1'",
            "Invoke-Expression -Command '$addFont -path $dir'"
        ]
    },
    "uninstaller": {
        "script": [
            "$removeFont = '$bucketsdir/everyx/bin/Remove-Font.ps1'",
            "Get-ChildItem -Path $dir -Include '*.ttf','*.ttc','*.otf' | ForEach {",
            "   Invoke-Expression -Command '$removeFont -file $($_.Name)'",
            "}"
        ]
    }
}
